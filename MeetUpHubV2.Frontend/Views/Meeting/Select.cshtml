    <script>
        $(document).ready(function () {
            console.log("ðŸš€ Select.cshtml yÃ¼klendi. Script Ã§alÄ±ÅŸÄ±yor.");

            // --- C#'dan JS'e Veri AktarÄ±mÄ± ---
            var today = new Date("@today.ToString("yyyy-MM-dd")" + "T00:00:00Z");
            
            // <<< YENÄ°: Kategori deÄŸerini doÄŸrudan alÄ±yoruz (Garanti olsun) >>>
            const currentCategoryValue = @((int)categoryEnum);

            const timeSlotStartHours = {
                @( ((int)TimeSlot.Morning).ToString() ): 8,
                @( ((int)TimeSlot.Afternoon).ToString() ): 13,
                @( ((int)TimeSlot.Evening).ToString() ): 16,
                @( ((int)TimeSlot.Night).ToString() ): 19
            };

            // --- Elementler ---
            const $joinButton = $('#joinButton');
            const $selectionAlert = $('#selectionAlert');
            const $timeSlotInput = $('#TimeSlot');
            const $capacityInput = $('#Capacity');
            const $cityInput = $('#City');
            const $selectedDateInput = $('#SelectedDate');

            // --- KART SEÃ‡Ä°M VE VALIDASYON ---
            $('.selectable-card').on('click', function () {
                if ($(this).hasClass('disabled')) return;
                
                var cardTypeClass = '';
                if ($(this).hasClass('date-card')) cardTypeClass = '.date-card';
                else if ($(this).hasClass('time-slot')) cardTypeClass = '.time-slot';
                else if ($(this).hasClass('group-size')) cardTypeClass = '.group-size';

                $(this).closest('.card-body').find('.selectable-card' + cardTypeClass).removeClass('border-danger border-2 shadow');
                $(this).addClass('border-danger border-2 shadow');

                var targetInput = $(this).data('target-input');
                var value = $(this).data('value');
                $(targetInput).val(value).trigger('change');

                console.log(`âœ… SeÃ§im YapÄ±ldÄ±: ${targetInput} = ${value}`);

                if ($(this).hasClass('date-card')) updateAvailableTimeSlots();
            });

            $('#citySelect').on('change', function() {
                $('#City').val($(this).val()).trigger('change');
                console.log(`âœ… Åžehir SeÃ§ildi: ${$(this).val()}`);
            });

            function checkSelections() {
                if (allSelected()) {
                    $joinButton.removeClass('disabled').prop('disabled', false);
                    $selectionAlert.addClass('d-none');
                } else {
                    $joinButton.addClass('disabled').prop('disabled', true);
                }
            }
            
            function allSelected() {
                 return $timeSlotInput.val() && $capacityInput.val() && $cityInput.val() && $selectedDateInput.val();
            }

            function updateAvailableTimeSlots() {
                var selectedDateStr = $selectedDateInput.val();
                if (!selectedDateStr) return;

                var selectedDate = new Date(selectedDateStr + "T00:00:00Z");
                var isToday = selectedDate.toDateString() === today.toDateString();
                var currentHour = isToday ? (new Date()).getHours() : -1;

                $('.selectable-card.time-slot').each(function () {
                    var slotValue = parseInt($(this).data('value'));
                    var slotStartHour = timeSlotStartHours[slotValue];

                    if (isToday && slotStartHour <= currentHour) {
                        $(this).addClass('disabled bg-light text-muted pe-none').removeClass('border-danger border-2 shadow cursor-pointer');
                        if ($timeSlotInput.val() == slotValue) $timeSlotInput.val('').trigger('change');
                    } else {
                        $(this).removeClass('disabled bg-light text-muted pe-none').addClass('cursor-pointer');
                    }
                });
                checkSelections();
            }

            $('#TimeSlot, #Capacity, #City, #SelectedDate').on('change', checkSelections);
            updateAvailableTimeSlots();

            // ============================================================
            // ðŸ”¥ BUTON TIKLAMA (DÃœZELTÄ°LMÄ°Åž VERSÄ°YON)
            // ============================================================
            
            function showAlert(message) {
                $selectionAlert.text(message).removeClass('d-none');
                console.warn("âš ï¸ UyarÄ± GÃ¶sterildi:", message);
            }

            $joinButton.on('click', async function (event) {
                console.log("ðŸ–±ï¸ BUTONA TIKLANDI! Ä°ÅŸlem baÅŸlÄ±yor...");
                event.preventDefault();

                var $this = $(this);
                $this.prop('disabled', true).html('KatÄ±lÄ±yor...');

                const token = localStorage.getItem("jwt_token");
                console.log("ðŸ”‘ Token Durumu:", token ? "Mevcut (Uzunluk: " + token.length + ")" : "YOK!");

                if (!token) {
                    showAlert("HATA: Token bulunamadÄ±! LÃ¼tfen tekrar giriÅŸ yapÄ±n.");
                    $this.prop('disabled', false).html('EtkinliÄŸe KatÄ±l');
                    return;
                }

                // <<< --- DÃœZELTME BURADA --- >>>
                // Input deÄŸerini okumak yerine, doÄŸrudan C# deÄŸiÅŸkenini kullanÄ±yoruz.
                const joinRequest = {
                    Category: currentCategoryValue, // <<< KESÄ°N Ã‡Ã–ZÃœM
                    TimeSlot: parseInt($timeSlotInput.val()),
                    Capacity: parseInt($capacityInput.val()),
                    SelectedDate: $selectedDateInput.val() + "T00:00:00Z"
                };

                console.log("ðŸ“¦ API'ye GÃ¶nderilecek Veri:", JSON.stringify(joinRequest));

                try {
                    console.log("ðŸ“¡ Ä°stek gÃ¶nderiliyor: http://localhost:5292/api/matching/join");
                    
                    const response = await fetch('http://localhost:5292/api/matching/join', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${token}`
                        },
                        body: JSON.stringify(joinRequest)
                    });

                    console.log("ðŸ“© API YanÄ±t StatÃ¼sÃ¼:", response.status);

                    
                    if (response.ok) {
    const data = await response.json();
    console.log("ðŸ”¥ API YanÄ±t Body:", data);

    // 1. Durum: API { success: true, room: {...} } dÃ¶ndÃ¼rÃ¼rse (RoomResponseDto)
    const isSuccessWrapper = data.success || data.Success;
    
    // 2. Durum: API doÄŸrudan Room objesi { id: 15, ... } dÃ¶ndÃ¼rÃ¼rse
    // (Senin ÅŸu anki durumun bu)
    const isDirectRoom = data.id || data.Id;

    if (isSuccessWrapper) {
        // Wrapper varsa, iÃ§indeki room verisini al
        const roomData = data.room || data.Room;
        const roomId = roomData.id || roomData.Id;
        console.log(`âœ… BaÅŸarÄ±lÄ± (Wrapper)! Oda ID: ${roomId}. YÃ¶nlendiriliyor...`);
        window.location.href = `/Meeting/WaitingRoom?roomId=${roomId}`;
    } 
    else if (isDirectRoom) {
        // Wrapper yoksa, gelen datayÄ± room olarak kabul et
        const roomId = data.id || data.Id;
        console.log(`âœ… BaÅŸarÄ±lÄ± (Direkt)! Oda ID: ${roomId}. YÃ¶nlendiriliyor...`);
        window.location.href = `/Meeting/WaitingRoom?roomId=${roomId}`;
    } 
    else {
        // BaÅŸarÄ±sÄ±z (Hata mesajÄ± var mÄ±?)
        showAlert(data.message || data.Message || "Odaya katÄ±lÄ±rken bir sorun oluÅŸtu.");
    }
} else {
                        const errorText = await response.text();
                        console.error("âŒ API HatasÄ± (Raw):", errorText);
                        try {
                            const errorJson = JSON.parse(errorText);
                            showAlert(errorJson.message || errorJson.title || `Hata: ${response.status}`);
                        } catch {
                            showAlert(`Sunucu HatasÄ±: ${response.status}`);
                        }
                    }

                } catch (error) {
                    console.error('âŒ FETCH (AÄž) HATASI:', error);
                    showAlert(`BaÄŸlantÄ± hatasÄ±: ${error.message}`);
                }

                if (window.location.href.indexOf("WaitingRoom") === -1) {
                    $this.prop('disabled', false).html('EtkinliÄŸe KatÄ±l');
                }
            });
            
            $joinButton.hover(
                function() { if(!$(this).hasClass('disabled')) $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );

        }); 
    </script>
}

